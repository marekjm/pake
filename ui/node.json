{
    "init": [
        {
            "short": "f",
            "long": "force",
            "help": "force reinitialization, WARNING: deletes all old data"
        }
    ],
    "meta": [
        {
            "short": "s",
            "long": "set",
            "conflicts": ["--remove"],
            "arguments": ["str", "str"],
            "help": "set or update a key in metadata of the node"
        },
        {
            "short": "r",
            "long": "remove",
            "conflicts": ["--set", "--get"],
            "arguments": ["str"],
            "help": "remove a key from metadata of the node"
        },
        {
            "short": "g",
            "long": "get",
            "conflicts": ["--remove"],
            "arguments": ["str"],
            "help": "return value of the given key"
        },
        {
            "short": "m",
            "long": "missing",
            "conflicts": ["--remove"],
            "help": "display missing but required keys from node's metadata"
        },
        {
            "short": "l",
            "long": "list-keys",
            "help": "display comma-separated list of keys in node's metadata"
        },
        {
            "short": "p",
            "long": "pretty",
            "help": "enable pretty formatting of JSON in metadata"
        },
        {
            "long": "reset",
            "conflicts": ["--set", "--remove", "--get", "--missing", "--list"],
            "arguments": ["str"],
            "help": "reset nodes metadata"
        }
    ],
    "mirrors": [
        {
            "short": "a",
            "long": "add",
            "requires": ["--url", "--host", "--cwd"],
            "conflicts": ["--remove"],
            "help": "add mirror for the node"
        },
        {
            "short": "u",
            "long": "url",
            "arguments": ["str"],
            "wants": ["--add", "--remove"],
            "help": "URL of the mirror"
        },
        {
            "short": "H",
            "long": "host",
            "arguments": ["str"],
            "requires": ["--add"],
            "help": "host for the FTP connection"
        },
        {
            "short": "c",
            "long": "cwd",
            "arguments": ["str"],
            "requires": ["--add"],
            "help": "directory to which PAKE should go after connecting to FTP server"
        },
        {
            "short": "r",
            "long": "remove",
            "arguments": ["str"],
            "conflicts": ["--add"],
            "help": "remove mirror"
        },
        {
            "short": "l",
            "long": "list",
            "conflicts": ["--add", "--remove"],
            "help": "list added mirrors"
        }
    ],
    "aliens": [
        {
            "short": "a",
            "long": "add",
            "arguments": ["str"],
            "conflicts": ["--remove"],
            "help": "add alien node to the net"
        },
        {
            "short": "r",
            "long": "remove",
            "arguments": ["str"],
            "conflicts": ["--add"],
            "help": "remove alien node from the net"
        },
        {
            "short": "u",
            "long": "update",
            "help": "update aliens metadata and mirrors"
        },
        {
            "short": "p",
            "long": "purge",
            "help": "purge dead aliens from the net"
        },
        {
            "short": "l",
            "long": "list",
            "help": "list all aliens in the net"
        },
        {
            "short": "d",
            "long": "discover",
            "help": "try to expand the net by discovering new aliens"
        }
    ],
    "push": [
        {
            "short": "m",
            "long": "main",
            "help": "push to main mirror"
        },
        {
            "short": "o",
            "long": "only",
            "conflicts": ["--main"],
            "arguments": ["str"],
            "help": "push only to selected mirror"
        }
    ],
    "packages": [
        {
            "short": "r",
            "long": "register",
            "arguments": ["str"],
            "conflicts": ["--unregister", "--delete"],
            "help": "register new package in the node"
        },
        {
            "short": "u",
            "long": "update",
            "help": "update metadata of registered packages"
        },
        {
            "short": "U",
            "long": "unregister",
            "arguments": ["str"],
            "help": "unregister package from the node"
        },
        {
            "short": "d",
            "long": "delete",
            "arguments": ["str"],
            "help": "delete package from the node"
        },
        {
            "short": "n",
            "long": "name",
            "wants": ["--unregister", "--delete"],
            "help": "name for the package"
        },
        {
            "short": "l",
            "long": "list",
            "help": "list all packages in the node"
        }
    ],
    "__global__": [
        {
            "short": "h",
            "long": "help",
            "help": "display this message and exit"
        },
        {
            "long": "version",
            "help": "display version information and exit"
        },
        {
            "short": "v",
            "long": "verbose",
            "conflicts": ["--quiet"],
            "help": "display more messages"
        },
        {
            "short": "Q",
            "long": "quiet",
            "conflicts": ["--verbose"],
            "help": "display less/no messages"
        },
        {
            "short": "D",
            "long": "debug",
            "help": "display debug messages"
        }
    ]
}
